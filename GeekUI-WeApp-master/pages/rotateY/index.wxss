
.btn-share{
  margin: 40rpx;
  background-color: #00AC50;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #fff;
}


.geek-rotate-wrapper {
  box-sizing: border-box;
  width: 100%;
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.geek-rotate-inner {
  width: 500rpx;
  height: 333rpx;
  position: relative;
  transform-style: preserve-3d;
  -webkit-transform-style: preserve-3d;
  transition: transform 0.8s;
}

.geek-inner-click {
  transform: rotateY(-180deg);
}

.geek-front-transform{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 4;
  top: 0;
  left: 0;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
}

.geek-back-transform{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  transform-origin: center center;
  transform: rotateY(180deg);
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
}
