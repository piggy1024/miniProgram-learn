/*评论*/
.comment-btn {
    position: relative;
    border: 0rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    font-size: 15px;
    height: 30px;
    line-height: 1;
    text-align: center;
    text-decoration: none;
    overflow: visible;
    transform: translate(0rpx, 0rpx);
    /*margin: 0 20rpx;*/
    margin-left: 20rpx;
    white-space: nowrap;
    width: 60px;
    border-radius: 9rpx;
}

.comment-input {
    justify-content: center;
    background-color: white;
    padding: 3px;
    font-size: 15px;
    height: 25px;
    color: black;
    max-height: 60px;
    min-height: 30px;
    align-items: center;
    text-align: left;
    border-radius: 9rpx;
}
.my-comment-box {
    position: fixed;
    z-index: 2000;
    /*bottom: 100rpx;*/
    width: 100vw;
    /*clear: bottom;*/
    background-color: #f7f7f7;
}

.comment-mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    z-index: 1800;
    bottom: 0;
    right: 0;
    left: 0;
}


