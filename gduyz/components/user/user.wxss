/* components/user/user.wxss */
.userinfo {
    position: relative;
    top: 50rpx;
    z-index: 60;
    display: flex;
    justify-content: flex-end;
}

.userinfo-avatar {
    overflow: hidden;
    display: block;
    width: 138rpx;
    height: 138rpx;
    margin: 50rpx 20rpx 20rpx;
    border-radius: 18rpx;
    box-shadow: 0 4rpx 20rpx 0 rgba(42, 104, 205, .15);
    background-color: white;

}

.userinfo-nickname {
    position: relative;
    top: 68rpx;
    color: white;
    font-size: 32rpx;
    margin-bottom: 20rpx;
}

/*ui*/
.UCenter-bg {
    background-size: cover;
    height: 550rpx;
    display: flex;
    justify-content: flex-end;
    position: relative;
    flex-direction: column;
    align-items: flex-end;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
    background-repeat: no-repeat;
    margin-bottom: 100rpx;
}
.signature-text {
    text-align: right;
    position: relative;
    top: -55rpx;
    /*margin: 5rpx 35rpx;*/
    width: 95vw;
    overflow: hidden;
    font-size: 28rpx;
    color: #999999;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}
